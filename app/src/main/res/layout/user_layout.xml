<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#0F84B9"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Ismoiljon Umarov"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold|normal" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ownerLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/round_person_24"
            app:riv_oval="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/deleteUser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="10dp"
            android:focusableInTouchMode="true"
            android:src="@drawable/round_delete_outline_24"
            app:riv_oval="true" />

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center_vertical"
            android:visibility="gone"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="#DCD9D9"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/numbermsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="18"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>